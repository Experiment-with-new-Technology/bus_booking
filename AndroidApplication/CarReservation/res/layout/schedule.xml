<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.74" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_january"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="January" 
              />
             <Button
                android:id="@+id/button_febuary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="February" />
              <Button
                android:id="@+id/button_march"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="March" />
               <Button
                android:id="@+id/button_april"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="April" />
                <Button
                android:id="@+id/button_may"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="May" />
                 <Button
                android:id="@+id/button_june_july"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="June - July" />
                  <Button
                android:id="@+id/button_august_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="August(1-15)" />
                   <Button
                android:id="@+id/button_august_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="August(16-31)" />
                    <Button
                android:id="@+id/button_september_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="September(1-15)" />
                     <Button
                android:id="@+id/button_september_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="September(16-30)" />
                      <Button
                android:id="@+id/button_october_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="October(1-15)" />
                       <Button
                android:id="@+id/button_october_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="October(16-31)" />
                        <Button
                android:id="@+id/button_november_decembr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="November - December" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>